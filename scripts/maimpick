#!/bin/sh

output="$(date '+%Y%m%d-%H%M-%S').png"
xclip_cmd="xclip -sel clip -t image/png"

case "$(printf "a selected area\\ncurrent window\\nfull screen\\na selected area (copy)\\ncurrent window (copy)\\nfull screen (copy)" | dmenu -l 7 -i -p "Screenshot which area?")" in
    "a selected area") maim -u -s ss-selected-"${output}" ;;
    "current window") maim -B -q -d 0.2 -i "$(xdotool getactivewindow)" ss-window-"${output}" ;;
    "full screen") maim -q -d 0.2 ss-full-"${output}" ;;
    "a selected area (copy)") maim -u -s | ${xclip_cmd} ;;
    "current window (copy)") maim -q -d 0.2 -i "$(xdotool getactivewindow)" | ${xclip_cmd} ;;
    "full screen (copy)") maim -q -d 0.2 | ${xclip_cmd} ;;
esac
